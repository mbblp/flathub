{
    "id": "org.clipgrab.ClipGrab",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.14",
    "command": "clipgrab",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "x264",
            "config-opts": [
                "--prefix=/app/",
                "--enable-shared",
                "--disable-cli"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "http://ftp.videolan.org/pub/x264/snapshots/x264-snapshot-20191217-2245-stable.tar.bz2",
                "sha256": "b2495c8f2930167d470994b1ce02b0f4bfb24b3317ba36ba7f112e9809264160"
                }
            ],
            "cleanup": [
                "/app/include",
                "/app/pkgconfig"
            ]
        },
        {
            "name": "ffmpeg",
            "build-options": {
                "env": {
                    "PKG_CONFIG_PATH": "/app/lib/pkgconfig"
                }
            },
            "config-opts": [
                "--prefix=/app/",
                "--enable-shared",
                "--disable-static",
                "--disable-doc",
                "--enable-gpl",
                "--enable-version3",
                "--disable-nonfree",
                "--enable-optimizations",
                "--enable-pthreads",
                "--disable-bzlib",
                "--disable-libgsm",
                "--enable-libtheora",
                "--enable-libvorbis",
                "--enable-libvpx",
                "--enable-libx264",
                "--enable-zlib",
                "--disable-libxcb",
                "--disable-lzma",
                "--disable-programs",
                "--disable-network",
                "--disable-protocols",
                "--enable-protocol=file",
                "--disable-devices",
                "--enable-muxer=avi",
                "--enable-muxer=h264",
                "--enable-muxer=mov",
                "--enable-muxer=mp4",
                "--enable-muxer=ogg",
                "--enable-muxer=webm",
                "--enable-demuxer=avi",
                "--enable-demuxer=h264",
                "--enable-demuxer=mov",
                "--enable-demuxer=mp3",
                "--enable-demuxer=ogg",
                "--enable-demuxer=wav",
                "--enable-parser=h264",
                "--enable-parser=vorbis",
                "--enable-encoder=aac",
                "--enable-encoder=libtheora",
                "--enable-encoder=libvorbis",
                "--enable-encoder=libvpx_vp8",
                "--enable-encoder=libvpx_vp9",
                "--enable-encoder=libx264",
                "--enable-encoder=mpeg4",
                "--enable-decoder=aac",
                "--enable-decoder=h264",
                "--enable-decoder=libvorbis",
                "--enable-decoder=libvpx_vp8",
                "--enable-decoder=libvpx_vp9",
                "--enable-decoder=mp3",
                "--enable-decoder=mpeg4",
                "--enable-decoder=pcm_s16le",
                "--enable-decoder=theora"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.ffmpeg.org/releases/ffmpeg-4.2.tar.xz",
                    "sha256": "023f10831a97ad93d798f53a3640e55cd564abfeba807ecbe8524dac4fedecd5"
                }
            ],
            "cleanup": [
                "/app/include",
                "/app/lib/pkgconfig",
                "/app/share"
            ]
        },
        {
            "name": "clipgrap",
            "buildsystem": "simple",
            "build-commands": [
                "qmake clipgrab.pro INCLUDEPATH+=/app/include/QtWebEngineWidgets",
                "sed -i 's,/usr/lib/x86_64-linux-gnu/libQt5WebEngineWidgets.so,/app/lib/x86_64-linux-gnu/libQt5WebEngineWidgets.so,g' -i Makefile",
                "sed -i 's,/usr/lib/x86_64-linux-gnu/libQt5WebEngineCore.so,/app/lib/x86_64-linux-gnu/libQt5WebEngineCore.so,g' -i Makefile",
                "make"
            ],
            "build-options": {
                "env": {
                    "QMAKEPATH": "/app/lib/"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.clipgrab.org/clipgrab-3.8.11.tar.gz",
                    "sha256": "b39b44fa31035ecab8f87cedddbcf9ce60082b0bebccdd4327582bf97d6dee4a"
                },
                {
                    "type": "shell",
                    "commands": [
                        "rm clipgrab-legacy.pro"
                    ]
                },
                {
                    "type": "file",
                    "path": "org.clipgrab.ClipGrab.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "org.clipgrab.ClipGrab.desktop"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/metainfo/ /app/share/applications/ /app/share/icons/hicolor/64x64/apps/",
                "install -m644 org.clipgrab.ClipGrab.appdata.xml /app/share/metainfo/",
                "install -m644 org.clipgrab.ClipGrab.desktop /app/share/applications",
                "install -m644 icon.png /app/share/icons/hicolor/64x64/apps/org.clipgrab.ClipGrab.png",
		"ls /app/share/icons/hicolor/64x64/",
                "install -m755 clipgrab /app/bin/"
            ]
        }
    ]
}
